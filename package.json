{
  "name": "hyjg-client",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite --mode development",
    "prod": "cross-env NODE_ENV=development vite --mode production",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "build:electron": "vue-tsc --noEmit && vite build --mode production && electron-builder --win --x64",
    "electron:generate-icons": "electron-icon-builder --input=./public/favicon.png --output=build --flatten"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.5.0",
    "axios": "^1.4.0",
    "element-plus": "^2.3.9",
    "js-yaml": "^4.1.0",
    "less": "^4.2.0",
    "rxjs": "^7.8.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "cross-env": "^7.0.3",
    "electron": "^25.5.0",
    "electron-builder": "^24.6.3",
    "electron-icon-builder": "^2.0.1",
    "electron-updater": "^6.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-electron": "^0.13.0-beta.1",
    "vue-tsc": "^1.8.5"
  },
  "build": {
    "appId": "hyjg.client.Electron",
    "productName": "hyjg-client",
    "asar": true,
    "copyright": "Copyright © 2023 完美维度",
    "directories": {
      "output": "./release/"
    },
    "files": [
      "./dist",
      "./dist-electron/main.js",
      "./package.json"
    ],
    "extraResources": [
      {
        "from": "./assets",
        "to": "hyjg"
      }
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": ""
    },
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  }
}
